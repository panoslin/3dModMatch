{
  "name": "shoe-last-matcher",
  "version": "1.0.0",
  "productName": "鞋模智能匹配系统",
  "main": "dist/electron/main.js",
  "description": "智能鞋模与粗胚匹配桌面应用",
  "author": "Shoe Last Tech",
  "license": "MIT",
  "directories": {
    "doc": "docs",
    "output": "dist"
  },
  "scripts": {
    "start": "electron .",
    "dev": "npm run build:angular && electron . --dev",
    "build:angular": "cd angular-app && ng build",
    "build:python": "cd python-engine && pyinstaller build.spec",
    "build": "npm run build:angular && npm run build:python && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "shoe",
    "last",
    "matching",
    "3D",
    "desktop"
  ],
  "build": {
    "appId": "com.shoelast.matcher",
    "productName": "鞋模智能匹配系统",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "angular-app/dist/**/*",
      "python-engine/dist/**/*",
      "database/schema.sql"
    ],
    "extraResources": [
      {
        "from": "python-engine/dist",
        "to": "python-engine",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "resources/icons/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "win": {
      "target": "nsis",
      "icon": "resources/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "language": "2052",
      "menuCategory": true,
      "artifactName": "鞋模智能匹配系统-${version}-setup.${ext}"
    }
  },
  "devDependencies": {
    "@types/node": "^24.4.0",
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/uuid": "^10.0.0",
    "better-sqlite3": "^11.10.0",
    "uuid": "^13.0.0"
  }
}
